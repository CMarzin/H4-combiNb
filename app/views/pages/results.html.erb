<%# A virer  %>
<header>
  <meta name="viewport" content="width=device-width, initial-scale=1">  
</header>
<%= stylesheet_link_tag "index.css" %>
<div class="container">
  <form class="form__index" action="/pages/results" method="GET">  
    <input class="input__index" type="text" value=<%= params.values[0] %> name="ville"></input>
  </form>
  <h1>Explorer <span class="text__red"><%= params.values[0] %></span></h1>

  <div class="activites">
    <% Activite.where(location: params.values[0]).each do |act| %>
    <a class="activite" href="<%= activite_path(act)%>">
      <img class="activite__img" src="<%= act.image.url %>" >
      <p class='text'><%= act.titre %></p>
    </a>
    <% end %>
  </div>
</div>