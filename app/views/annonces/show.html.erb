<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @annonce.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @annonce.description %>
</p>

<p>
  <strong>Creator:</strong>
  <%= User.find(@annonce.creator_id).username %>
</p>

<p>
  <strong>Location:</strong>
  <%= @annonce.location %>
</p>

<p>
  <strong>Start:</strong>
  <%= @annonce.startTime %>
</p>

<p>
  <strong>End:</strong>
  <%= @annonce.endTime %>
</p>

<p>
  <strong>Combi:</strong>
  <% combi = Combi.find(@annonce.combi_id) %>
  <%= link_to "#{combi.marque} #{combi.year}", combi_path(combi.id) %>
</p>

<% if current_user[:id] != @annonce.creator_id.to_i %>
  <h3>RÃ©server cette annonce</h3>

  <%= form_for(@booking, url: {controller: 'bookings', action: 'create'}) do |form| %>

    <div class="field">
      <%= form.label :startTime %>
      <%= form.text_field :startTime, 
        id: :booking_startTime,
        value: (@annonce.startTime.to_s.empty? ? Date.today : @booking.startTime),
        :class => "datepicker start",
        data: { availability: @annonce.availability }
      %>
    </div>

    <div class="field">
      <%= form.label :endTime %>
      <%= form.text_field :endTime,
        id: :booking_endTime,
        value: (@annonce.endTime.to_s.empty? ? Date.today + 1 : @booking.endTime),
        :class => "datepicker end"
      %>
    </div>
    
    <div class="field">
      <%= form.hidden_field :annonce_id, value: @annonce.id %>
    </div>

    <div class="field">
      <%= form.hidden_field :client_id, value: current_user[:id] %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
<% end %>


<% if policy(@annonce).edit? %>
  <%= link_to 'Edit', edit_annonce_path(@annonce) %> |
<% end %>
<%= link_to 'Back', annonces_path %>
